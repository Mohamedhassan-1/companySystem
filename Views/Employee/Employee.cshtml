@inject Pratical.BL.interfaces.IEmployeeRep employee
@{
    ViewBag.Title = "Employee";
    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add Employee</a>
<h3>
    @if (Culture == "ar-EG")
    {
        <a asp-controller="Employee" asp-action="Employee" asp-route-culture="en-US">@SharedLocalizer["English"]</a>
    }
    @if (Culture == "en-US")
    {
        <a class="right" asp-controller="Employee" asp-action="Employee" asp-route-culture="ar-EG">@SharedLocalizer["Arabic"]</a>
        <br />
    }
</h3>

<h2>@SharedLocalizer["WTE"]</h2>
<table class="table table-striped table-bordered text-center">
    <tr>
        @*<th class="text-center">Id</th>*@
        <th class="text-center">@SharedLocalizer["Name"]</th>
        <th class="text-center">@SharedLocalizer["Address"]</th>
        <th class="text-center">@SharedLocalizer["isActive"]</th>
        <th class="text-center">@SharedLocalizer["Notes"]</th>
        <th class="text-center">@SharedLocalizer["Email"]</th>
        <th class="text-center">@SharedLocalizer["HireDate"]</th>
        <th class="text-center">@SharedLocalizer["Salary"]</th>
        <th class="text-center">@SharedLocalizer["departmentName"]</th>
        <th class="text-center">@SharedLocalizer["Edit"]</th>
        <th class="text-center">@SharedLocalizer["Delete"]</th>
        <th class="text-center">@SharedLocalizer["Details"]</th>

    </tr>

    @foreach (var item in employee.Get())
    {
<tr>
    @*<td>@item.Id</td>*@
    <td>@item.Name</td>
    <td>@item.Address</td>
    <td>@item.isActive</td>
    <td>@item.Notes</td>
    <td>@item.Email</td>
    <td>@item.HireDate</td>
    <td>@item.Salary</td>
    <td>@item.departmentName</td>
    <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.id" class="btn btn-success">@SharedLocalizer["Edit"]</a></td>
    <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">@SharedLocalizer["Delete"]</a></td>
    <td ><a   asp-controller="Employee" asp-action="Details" asp-route-id="@item.id" class="btn btn-block">@SharedLocalizer["Details"]</a></td>


</tr>
    }
   

</table>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<script src="~/jquery/jquery.min.js"></script>
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>


