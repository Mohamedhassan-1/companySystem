@model IQueryable<IdentityRole>
@using Microsoft.AspNetCore.Identity;
@{
    ViewBag.Title = "Index";
}
<a asp-controller="Admin" asp-action="CreateRole" class="btn btn-primary">Create Role</a>
<table class="table table-striped table-bordered text-center">
    <tr>

        <th class="text-center" >Role Name</th>       
        <th class="text-center">@SharedLocalizer["Edit"]</th>
        <th class="text-center">@SharedLocalizer["Delete"]</th>
    

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.Name</td>
    <td><a asp-controller="Admin" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-success">@SharedLocalizer["Edit"]</a></td>
    <td><a asp-controller="Admin" asp-action="DeleteRole" asp-route-Id="@item.Id" class="btn btn-danger">@SharedLocalizer["Delete"]</a></td>
       @* <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@item.id" class="btn btn-block">@SharedLocalizer["Details"]</a></td>*@


</tr>
    }


</table>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<script src="~/jquery/jquery.min.js"></script>
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>





